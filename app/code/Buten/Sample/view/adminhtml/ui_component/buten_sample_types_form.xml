<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">buten_sample_types_form.buten_sample_types_data_source</item>
            <item name="deps" xsi:type="string">buten_sample_types_form.buten_sample_types_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Product Types</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">buten_sample_types_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/*/types"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
            <button name="delete" class="Buten\Sample\Ui\Component\Control\ProductType\DeleteButton"/>
            <button name="save" class="Buten\Sample\Ui\Component\Control\ProductType\SaveButton"/>
        </buttons>
    </settings>
    <dataSource name="buten_sample_types_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Buten\Sample\Ui\DataProvider\ProductTypes\EditDataProvider" name="buten_sample_types_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
            <dataScope>general</dataScope>
        </settings>

        <field name="type" formElement="input" sortOrder="20">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Type</label>
            </settings>
        </field>
    </fieldset>
</form>
